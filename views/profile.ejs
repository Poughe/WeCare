<!doctype html>
<html>
<head>
    <title>Profile Page</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Community Hub</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Settings</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>status</strong>: <%= user.local.title %><br>
                        <strong>email</strong>: <%= user.local.email %><br>                       
                    </p>
                <% } %>
            </div>
        </div>
        <div class="col-sm-6">
            <h3>Explore Your Community</h3>
            <a href="/map">Click Here</a>
        </div>
        <div class="col-sm-6">
            <h3>Find Local Events</h3>
            <a href="/map">Click Here</a>
        </div> 

</div>

<script src="https://kit.fontawesome.com/c0e668a8ad.js" crossorigin="anonymous"></script>
<script src="main.js"></script>

</body>
</html>
