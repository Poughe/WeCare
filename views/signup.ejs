		        <!--Login Template-->
				<div class="container">
					<% if (message.length> 0) { %>
						<div class="alert alert-danger">
							<%= message %>
						</div>
					<% } %>
		
					<div class="row w-100 d-flex justify-content-center align-items-center main_div">
						<div class="col-12 col-lg-6 col-md-8 col-xxl-5">
							<div class="card py-3 px-2">
								<p class="text-center my-3 text-capitalize"><span>connect with us</span></p>						
								<div class="row mx-auto">
									<div class="col-4">
										<a href="https://twitter.com/PoughErnest"><i class="fab fa-twitter"></i></a>
									</div>
									<div class="col-4">
										<a href="https://github.com/Poughe"><i class="fab fa-github"></i></a>
									</div>
									<div class="col-4">
										<a href="https://www.linkedin.com/in/ernestpough/"><i class="fab fa-linkedin"></i></a>
									</div>
								</div>
		
								<div class="division">
									<div class="row">
										<div class="col-6 mx-auto mb-4">
											<span class="main-heading">Sign-Up Form</span>
										</div>
									</div>
										
									<!-- SIGNUP FORM -->
						<form class="myform" action="/signup" method="post">
							<div class="form-group">
								<input type="text" class="form-control" name="email" placeholder="Name@example.com">
							</div>
							<div class="form-group">
								<input type="password" class="form-control" name="password" placeholder="Password">
							</div>
							<h5 class="mb-3 pt-3">Are you seeking to become a Mentor or Mentee?</h5>
							<div class="form-check form-check-inline">
								<input class="form-check-input" type="radio" name="title" id="inlineRadio1" value="Mentor">
								<label class="form-check-label" for="inlineRadio1">Mentor</label>
							  </div>
							  <div class="form-check form-check-inline">
								<input class="form-check-input" type="radio" name="title" id="inlineRadio2" value="Mentee">
								<label class="form-check-label" for="inlineRadio2">Mentee</label>
							  </div>
							  <h5 class="mb-3 pt-3">What are your current interest(s) / profession?</h5>
							  <div class="mb-3 form-check form-check-inline">
								  <input class="form-check-input" type="checkbox" name="Software Developer" id="inlineCheckbox1" value="Software Developer">
								  <label class="form-check-label" for="inlineCheckbox1">Software Developer</label>
							  </div>
							  <div class="form-check form-check-inline">
								  <input class="form-check-input" type="checkbox" name="Physician Assistant" id="inlineCheckbox2" value="Physician Assistant">
								  <label class="form-check-label" for="inlineCheckbox2">Physician Assistant</label>
							  </div>
							  <div class="form-check form-check-inline">
								  <input class="form-check-input" type="checkbox" name="Nurse Practitioner" id="inlineCheckbox3" value="Nurse Practitioner">
								  <label class="form-check-label" for="inlineCheckbox3">Nurse Practitioner</label>
							  </div>
							  <div class="form-check form-check-inline">
								  <input class="form-check-input" type="checkbox" name="Dentist" id="inlineCheckbox3" value="Dentist">
								  <label class="form-check-label" for="inlineCheckbox3">Dentist</label>
							  </div>
							  <div class="form-check form-check-inline">
								  <input class="form-check-input" type="checkbox" name="Veterinarian" id="inlineCheckbox3" value="Veterinarian">
								  <label class="form-check-label" for="inlineCheckbox3">Veterinarian</label>
							  </div>
							<div class="d-flex justify-content-center m-3">
								<button type="submit" class="btn btn-warning btn-lg">Signup</button>
							</div>
						</form>
		
								</div>
		
							</div>
						</div>
					</div>
				</div>
	
		
